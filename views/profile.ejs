<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pinterest Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Custom animations */
    .hover-scale {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-scale:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }
  </style>
</head>

<body class="bg-gray-50">
  <!-- Profile Header -->
  <header class="bg-gradient-to-r from-pink-500 to-red-500 text-white py-10">
    <div class="container mx-auto text-center">
      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRVf-Sm-F1X6m501mwE5VowNHE3wJJZEFLH2w&s"
        alt="Profile" class="rounded-full mx-auto w-24 h-24 border-4 border-white">
      <h1 class="text-3xl font-bold mt-4">
        <%= user.username %>
      </h1>
      <p class="text-lg">
        <%= user.email %>
      </p>
      <button class="mt-4 px-6 py-2 bg-white text-pink-500 font-bold rounded-full hover:bg-pink-100 transition"><a
          href="/post">Update Post</a></button>
    </div>
  </header>


  <div class="container mx-auto p-8 bg-white shadow-lg rounded-lg w-1/3 bg-gradient-to-r from-pink-400 to-red-400 ">
    <h1 class="text-2xl font-bold mb-6 text-center">Upload a New Post</h1>
    <form action="/upload" method="post" enctype="multipart/form-data" class="space-y-4  ">
      <div class="form-group">
        <label for="caption" class="block text-lg font-medium text-gray-700">Caption:</label>
        <input type="text" id="caption" name="caption"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">


        <label for="image" class="block text-lg font-medium text-gray-700">Image:</label>
        <input type="file" id="image" name="file"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
      </div>
      <button type="submit"
        class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Upload</button>
    </form>
  </div>


  <!-- Posts Section -->
  <main class="container mx-auto mt-10 px-4">
    <h2 class="text-2xl font-bold mb-6 text-gray-700">Your Pins</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <% user.posts.forEach(function(post) { %>
        <div class="bg-white rounded-lg shadow hover-scale overflow-hidden">
          <img src="/images/uploads/<%=post.image%>" alt="Post" class="w-full h-40 object-cover">
          <div class="p-4">
            <h3 class="text-lg font-semibold">
              <%= post.postText %>
            </h3>
          </div>
        </div>
        <% }); %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-6 mt-10">
    <div class="container mx-auto text-center">
      <p>&copy; 2025 Your Pinterest. All rights reserved.</p>
    </div>
  </footer>

  <!-- JavaScript for interactivity -->

</body>

</html>